page {
	overflow: hidden;
	background: radial-gradient(rgba(0,0,0,.5) 30%, rgba(0,0,0,1));
}

.play-bg {
	z-index: -1;
	height: 100%;
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	opacity: 0.4;
}

.trun-bg {
	height: 250px;
	width: 250px;
	position: fixed;
	top: 20%;
	left: 50%;
	border-radius: 50%;
	border: 40px solid rgba(0,0,0,0.5);
}

.play-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 350rpx;
}

.lyric {
	font-size: 15px;
	text-align: center;
	padding-left: 15px;
	padding-right: 15px;
	margin-bottom: 60rpx;
	color: #d0d0d0;
	transition: all .5s;
}

.lyric.selected {
	color: #fff;
	font-size: 16px;
}

.lyric text {
	display: block;
	margin-top: 15rpx;
}

.footer {
 	position: fixed;
 	bottom: 0;
 	left: 0;
 	right: 0;
 	background: rgba(0,0,0,0.7);
 	color: #fff;
}

.progress {
	padding-top: 10px; 
	display: flex;
  	flex-direction: row;
  	justify-content: space-around;
	align-items: center;
}

.progress text {
	font-size: 10px;
	width: 12%;
	text-align: center;
}

.progress progress {
	width: 76%;
}

.controls {
  	padding: 10px 0;
  	width: 70%;
  	margin: 0 auto;
  	display: flex;
  	flex-direction: row;
  	justify-content: space-around;
	align-items: center;
}

.controls image {
  	display: block;
  	width: 40px;
  	height: 40px;
  	margin: 0 5px;
}

.controls .mode{
  	position: absolute;
  	width: 24px;
  	height: 24px;
  	left: 15px;
}

.controls .fav {
	position: absolute;
  	width: 24px;
  	height: 24px;
  	right: 15px;	
}

.favitem {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 45px;
}

.favitem .left {
	width: 12%;
	height: 100%;
	margin:0 15rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	background-color: black;
}

.favitem .left image {
	width: 100%;
	height: 100%;
}

.favitem .left .default {
	width: 70%;
	height: 70%;
}

.favitem .right {
	flex: 1;
	height: 100%;
	text-align: left;
}

.favitem .fav-name {
	font-size: 15px;
}

.favitem .fav-count {
	font-size: 12px;
	color: #999;
}